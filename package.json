{
  "name": "@executivehomes/linear-actions",
  "version": "1.0.4",
  "description": "GitHub Actions for Linear integration",
  "main": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "action.yml"
  ],
  "packageManager": "yarn@4.7.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "test": "jest",
    "prebuild": "yarn test",
    "build": "tsc && ncc build dist/src/index.js -o dist && ncc build dist/src/pre.js -o dist/pre && ncc build dist/src/post.js -o dist/post",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "github-actions",
    "linear",
    "tickets"
  ],
  "author": "Executive Homes",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "undici": "^6.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/github": "^7.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.0.4"
  }
}
